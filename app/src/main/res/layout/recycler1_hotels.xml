<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:layout_marginTop="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img1Hotels"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/pic5"
            android:padding="15dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/txt1Hotels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Park Baga River Goa"
            android:layout_below="@id/img1Hotels"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:textSize="16dp"/>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/txt1Hotels"
            android:src="@drawable/five_stars"
            android:layout_below="@id/img1Hotels"
            android:layout_marginTop="-11dp"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/txt2Hotels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1Hotels"
            android:layout_marginLeft="20dp"
            android:text="Baga"
            android:textSize="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2Hotels"
            android:layout_marginLeft="20dp"
            android:text="Doctor on Call | Free WiFi"
            android:layout_marginTop="10dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txt3Hotels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt1Hotels"
            android:text="R̶s̶.̶ ̶5̶,̶6̶2̶5̶"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/txt4Hotels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 3,329"
            android:layout_below="@id/txt3Hotels"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="#000"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/txt5Hotels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt4Hotels"
            android:text="per night"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="9dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt5Hotels"
            android:layout_alignParentRight="true"
            android:text="Save Rs. 2,296"
            android:layout_marginRight="20dp"
            android:textColor="#FF5722"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>