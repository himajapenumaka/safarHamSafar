                android:src="@drawable/ic_right" />

            <View
                android:id="@+id/view6SelectPay"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/img6SelectPay"
                android:layout_marginTop="10dp"
                android:background="#757575" />

            <ImageView
                android:id="@+id/img7SelectPay"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_below="@id/view6SelectPay"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/mobile_wallet_logo" />

            <TextView
                android:id="@+id/txt7SelectPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view6SelectPay"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@id/img7SelectPay"
                android:text="Mobile Wallet"
                android:textColor="#000"
                android:textSize="19dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/view6SelectPay"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_right" />

            <View
                android:id="@+id/view7SelectPay"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/img7SelectPay"
                android:layout_marginTop="10dp"
                android:background="#757575" />

            <ImageView
                android:id="@+id/img8SelectPay"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_below="@id/view7SelectPay"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/phonepe_logo" />

            <TextView
                android:id="@+id/txt8SelectPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view7SelectPay"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@id/img8SelectPay"
                android:text="PhonePe (UPI/Wallet/Cards)"
                android:textColor="#000"
                android:textSize="19dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/view7SelectPay"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_right" />

            <View
                android:id="@+id/view8SelectPay"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/img8SelectPay"
                android:layout_marginTop="10dp"
                android:background="#757575" />

            <ImageView
                android:id="@+id/img9SelectPay"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_below="@id/view8SelectPay"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/amazon_pay" />

            <TextView
                android:id="@+id/txt9SelectPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view8SelectPay"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@id/img9SelectPay"
                android:text="Amazon Pay"
                android:textColor="#000"
                android:textSize="19dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/view8SelectPay"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_right" />

            <View
                android:id="@+id/view9SelectPay"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/img9SelectPay"
                android:layout_marginTop="10dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#153084"
        android:weightSum="6">

        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Rs. 3,140"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:textAlignment="viewEnd"
            android:layout_marginRight="15dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Due Now"
            android:textColor="#fff"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_info_amazon_pay" />

    </LinearLayout>

</RelativeLayout>