<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MobileWalletActivity">

    <include
        android:id="@+id/toolbarMobileWallet"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarMobileWallet"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="Select Provider"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="for Payment via Third party Wallets" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMobileWallet"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/txt2"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="Mobiwik - upto Rs. 100 Super Cash"
                android:textColor="#000"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="#000"/>

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/line"
                android:text="PayZapp"
                android:textColor="#000"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/line"
                 android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtSafeMobWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Safe and Secure"
        android:layout_below="@id/cardMobileWallet"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:drawableLeft="@drawable/ic_lock_amazon_pay"
        android:drawablePadding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45 million+ satisfied customers have used Safar Hamsafar"
        android:layout_below="@id/txtSafeMobWallet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#153084"
        android:weightSum="6">

        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Rs. 3,140"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:textAlignment="viewEnd"
            android:layout_marginRight="10dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="Due Now"
            android:textColor="#fff"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:src="@drawable/ic_info_amazon_pay" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.9">

            <Button
                android:layout_weight="1.9"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="Continue"
                android:textSize="18dp"
                android:layout_centerInParent="true"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:background="@drawable/border2"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>