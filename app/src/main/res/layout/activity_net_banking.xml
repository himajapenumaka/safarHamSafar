<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.NetBankingActivity">

    <include
        android:id="@+id/toolbarNetBanking"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/txtselectbank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarNetBanking"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="Select Bank"
        android:textColor="#000"
        android:textSize="19dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1NetBanking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtselectbank"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt1Card1NetBanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="Axis Bank"
                android:textColor="#000"
                android:textSize="21dp"
                android:layout_marginBottom="15dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"/>

            <View
                android:id="@+id/view1NetBanking"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txt1Card1NetBanking"
                android:background="#757575"/>

            <TextView
                android:id="@+id/txt2Card1NetBanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="ICICI Bank"
                android:textColor="#000"
                android:layout_below="@id/view1NetBanking"
                android:textSize="21dp"
                android:layout_marginBottom="15dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/view1NetBanking"/>

            <View
                android:id="@+id/view2NetBanking"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txt2Card1NetBanking"
                android:background="#757575"/>

            <TextView
                android:id="@+id/txt3Card1NetBanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="HDFC Bank"
                android:textColor="#000"
                android:textSize="21dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@id/view2NetBanking"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/view2NetBanking"/>

            <View
                android:id="@+id/view3NetBanking"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txt3Card1NetBanking"
                android:background="#757575"/>

            <TextView
                android:id="@+id/txt4Card1NetBanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="State Bank of India"
                android:textColor="#000"
                android:textSize="21dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@id/view3NetBanking"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/view3NetBanking"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#153084"
        android:weightSum="6">

        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Rs. 3,140"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:textAlignment="viewEnd"
            android:layout_marginRight="15dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Due Now"
            android:textColor="#fff"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_info_amazon_pay" />

    </LinearLayout>

</RelativeLayout>