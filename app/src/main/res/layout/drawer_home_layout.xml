<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/imgAccount"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_account"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtNameAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgAccount"
        android:text="Hello, HIMAJA"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/txtMailAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNameAccount"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/imgAccount"
        android:text="himaja.xyz@gmail.com"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgAccount"
        android:layout_below="@id/txtMailAccount"
        android:text="View/Edit Profile"
        android:layout_marginLeft="20dp"
        android:textColor="#ff5722"
        android:layout_marginTop="4dp"/>

    <View
        android:id="@+id/viewAccount"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imgAccount"
        android:layout_marginTop="10dp"
        android:background="#757575"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="myBiz"
        android:layout_below="@id/viewAccount"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:textSize="18dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="3dp"
        android:background="#757575"/>

</RelativeLayout>