<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn.LoginActivity2">

    <include
        android:id="@+id/toolbarLogin2"
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/txtVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify your Mobile Number"
        android:layout_below="@id/toolbarLogin2"
        android:textSize="26dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/txtotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP has been sent to your MOBILE"
        android:layout_below="@id/txtVerify"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:textStyle="italic"
        android:textColor="#212121"/>

    <TextView
        android:id="@+id/txtEnterOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP"
        android:layout_below="@id/txtotp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEnterOtp"
        android:background="#eceff1"
        android:hint="1234"
        android:padding="10dp"
        android:maxLines="1"
        android:maxLength="4"
        android:textSize="23dp"
        android:inputType="number"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txtResend"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/resend_otp_on_sms_whatsapp"
        android:layout_below="@id/etOtp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="18dp"
        android:textSize="18dp"
        android:textColor="#2979ff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/by_pressing_this_i_agree_to_receive_critical_messages_such_as_otp_bookig_details_on_whatsapp"
        android:layout_below="@id/txtResend"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:text="Continue"
        android:textSize="22dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/border1"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>