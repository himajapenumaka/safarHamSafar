<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img1GoaOffers"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:src="@drawable/pic5"
            android:padding="20dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/txt1GoaOffers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Park Baga River Goa"
            android:layout_below="@id/img1GoaOffers"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:textSize="18dp"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/txt1GoaOffers"
            android:src="@drawable/five_stars"
            android:layout_below="@id/img1GoaOffers"
            android:layout_marginTop="-12dp"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/txt2GoaOffers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1GoaOffers"
            android:layout_marginLeft="20dp"
            android:text="Baga"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2GoaOffers"
            android:layout_marginLeft="20dp"
            android:text="Doctor on Call | Free WiFi"
            android:layout_marginTop="10dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txt3GoaOffers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt2GoaOffers"
            android:text="R̶s̶.̶ ̶5̶,̶6̶2̶5̶"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/txt4GoaOffers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 3,329"
            android:layout_below="@id/txt3GoaOffers"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="#000"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/txt5GoaOffers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt4GoaOffers"
            android:text="per night"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt5GoaOffers"
            android:layout_alignParentRight="true"
            android:text="Save Rs. 2,296"
            android:layout_marginRight="20dp"
            android:textColor="#FF5722"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>